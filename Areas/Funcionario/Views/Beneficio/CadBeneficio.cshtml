@model Tcc.Areas.Funcionario.Models.modelBeneficio

@{
    ViewBag.Title = "Cadastro de Beneficios - ";
    Layout = "~/Areas/Funcionario/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center titulo-funcionario">Cadastro de Beneficios</h2>

@using (Html.BeginForm("CadBeneficio", "Beneficio", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group text-center fw-bolder">
            @Html.LabelFor(model => model.nomeBeneficio, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-6 offset-md-3 pt-2">
                @Html.ValidationMessageFor(model => model.nomeBeneficio, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4 offset-md-4 pt-2">
                @Html.EditorFor(model => model.nomeBeneficio, new { htmlAttributes = new { @class = "form-control d-inline-flex text-center" } })
            </div>
        </div>
        <br />
        <br />
        <div class="col-md-4 offset-md-4 pt-2 text-center">
            @Html.DropDownList("planos", "Escolha o Plano")
        </div>
        <br />
        <br />
        <div class="form-group text-center fw-bolder">
            <div class="col-md-12">
                <input type="submit" value="Cadastrar" class="btn btn-success rounded-pill" />
            </div>
        </div>
        <br />
    </div>
}

<div class="text-center">
    @Html.ActionLink("Voltar", "ListarBeneficio", "Beneficio")
</div>
