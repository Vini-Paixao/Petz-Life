@model Tcc.Areas.Funcionario.Models.modelVeterinario

@{
    ViewBag.Title = "Editar o Veterinário - ";
    Layout = "~/Areas/Funcionario/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center titulo-funcionario">Editar o Veterinário</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group text-center fw-bolder">
            @Html.LabelFor(model => model.idVeterinario, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-4 offset-md-4 pt-2">
                @Html.EditorFor(model => model.idVeterinario, new { htmlAttributes = new { @class = "form-control d-inline-flex text-center", @readOnly = "readOnly" } })
            </div>
        </div>
        <br />
        <div class="form-group text-center fw-bolder">
            @Html.LabelFor(model => model.nomeVeterinario, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-6 offset-md-3 pt-2">
                @Html.ValidationMessageFor(model => model.nomeVeterinario, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4 offset-md-4 pt-2">
                @Html.EditorFor(model => model.nomeVeterinario, new { htmlAttributes = new { @class = "form-control d-inline-flex text-center" } })
            </div>
        </div>
        <br />
        <div class="form-group text-center fw-bolder">
            @Html.LabelFor(model => model.especVeterinario, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-6 offset-md-3 pt-2">
                @Html.ValidationMessageFor(model => model.especVeterinario, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4 offset-md-4 pt-2">
                @Html.EditorFor(model => model.especVeterinario, new { htmlAttributes = new { @class = "form-control d-inline-flex text-center" } })
            </div>
        </div>
        <br />
        <div class="form-group text-center fw-bolder">
            @Html.LabelFor(model => model.telefoneVeterinario, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-6 offset-md-3 pt-2">
                @Html.ValidationMessageFor(model => model.telefoneVeterinario, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4 offset-md-4 pt-2">
                @Html.EditorFor(model => model.telefoneVeterinario, new { htmlAttributes = new { @class = "form-control d-inline-flex text-center" } })
            </div>
        </div>
        <br />
        <div class="form-group text-center fw-bolder">
            @Html.LabelFor(model => model.emailVeterinario, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-6 offset-md-3 pt-2">
                @Html.ValidationMessageFor(model => model.emailVeterinario, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4 offset-md-4 pt-2">
                @Html.EditorFor(model => model.emailVeterinario, new { htmlAttributes = new { @class = "form-control d-inline-flex text-center" } })
            </div>
        </div>
        <br />
        <br />
        <div class="col-md-4 offset-md-4 pt-2 text-center">
            @Html.DropDownList("clinicas", "Escolha a Clínica")
        </div>
        <br />
        <br />
        <div class="form-group text-center fw-bolder">
            <div class="col-md-12">
                <input type="submit" value="Alterar" class="btn btn-warning rounded-pill" />
            </div>
        </div>
        <br />
    </div>
}
<div class="text-center">
    @Html.ActionLink("Voltar", "ListarVeterinario", "Veterinario")
</div>
