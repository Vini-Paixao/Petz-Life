@model Tcc.Areas.Funcionario.Models.modelTipo

@{
    ViewBag.Title = "Editar os Tipos";
    Layout = "~/Areas/Funcionario/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center titulo-funcionario">Editar os Tipos</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group text-center fw-bolder">
            @Html.LabelFor(model => model.idTipo, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-4 offset-md-4 pt-2">
                @Html.EditorFor(model => model.idTipo, new { htmlAttributes = new { @class = "form-control d-inline-flex text-center", @readOnly = "readOnly" } })
            </div>
        </div>

        <div class="form-group text-center fw-bolder">
            @Html.LabelFor(model => model.nomeTipo, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-6 offset-md-3 pt-2">
                @Html.ValidationMessageFor(model => model.nomeTipo, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4 offset-md-4 pt-2">
                @Html.EditorFor(model => model.nomeTipo, new { htmlAttributes = new { @class = "form-control d-inline-flex text-center" } })
            </div>
        </div>
        <br />
        <div class="form-group text-center fw-bolder">
            <div class="col-md-12">
                <input type="submit" value="Alterar" class="btn btn-warning rounded-pill" />
            </div>
        </div>
    </div>
    <br />
}

<div class="text-center">
    @Html.ActionLink("Voltar", "ListarTipo")
</div>
