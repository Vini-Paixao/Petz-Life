@model Tcc.Areas.Funcionario.Models.modelFormaPagamento

@{
    ViewBag.Title = "Editar Formas de Pagamento";
    Layout = "~/Areas/Funcionario/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center titulo-funcionario">Editar Formas de Pagamento</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group text-center fw-bolder">
        @Html.LabelFor(model => model.idFormaPagamento, htmlAttributes: new { @class = "control-label col-md-12" })
        <div class="col-md-4 offset-md-4 pt-2">
            @Html.EditorFor(model => model.idFormaPagamento, new { htmlAttributes = new { @class = "form-control d-inline-flex text-center", @readOnly = "readOnly" } })
        </div>
    </div>
    <br />
    <div class="form-group text-center fw-bolder">
        @Html.LabelFor(model => model.nomeFormaPagamento, htmlAttributes: new { @class = "control-label col-md-12" })
        <div class="col-md-6 offset-md-3 pt-2">
            @Html.ValidationMessageFor(model => model.nomeFormaPagamento, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-4 offset-md-4 pt-2">
            @Html.EditorFor(model => model.nomeFormaPagamento, new { htmlAttributes = new { @class = "form-control d-inline-flex text-center" } })
        </div>
    </div>
    <br />
    <div class="form-group text-center fw-bolder">
        <div class="col-md-12">
            <input type="submit" value="Alterar" class="btn btn-warning rounded-pill" />
        </div>
    </div>
    <br />
</div>
}

<div class="text-center">
    @Html.ActionLink("Voltar", "ListarFormaPagamento", "FormaPagamento")
</div>