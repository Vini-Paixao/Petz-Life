@model Tcc.Areas.Funcionario.Models.modelPlano

@{
    ViewBag.Title = "Editar os Planos - ";
    Layout = "~/Areas/Funcionario/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center titulo-funcionario">Editar os Planos</h2>

@using (Html.BeginForm("EditarPlano", "Plano", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group text-center fw-bolder">
            @Html.LabelFor(model => model.idPlano, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-4 offset-md-4 pt-2">
                @Html.EditorFor(model => model.idPlano, new { htmlAttributes = new { @class = "form-control d-inline-flex text-center", @readOnly = "readOnly" } })
            </div>
        </div>
        <br />
        <div class="form-group text-center fw-bolder">
            @Html.LabelFor(model => model.nomePlano, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-6 offset-md-3 pt-2">
                @Html.ValidationMessageFor(model => model.nomePlano, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4 offset-md-4 pt-2">
                @Html.EditorFor(model => model.nomePlano, new { htmlAttributes = new { @class = "form-control d-inline-flex text-center" } })
            </div>
        </div>
        <div class="form-group text-center fw-bolder">
            @Html.LabelFor(model => model.tagPlano, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-6 offset-md-3 pt-2">
                @Html.ValidationMessageFor(model => model.tagPlano, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4 offset-md-4 pt-2">
                @Html.EditorFor(model => model.tagPlano, new { htmlAttributes = new { @class = "form-control d-inline-flex text-center" } })
            </div>
        </div>
        <br />
        <div class="form-group text-center fw-bolder">
            @Html.LabelFor(model => model.valorPlano, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-6 offset-md-3 pt-2">
                @Html.ValidationMessageFor(model => model.valorPlano, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4 offset-md-4 pt-2">
                @Html.EditorFor(model => model.valorPlano, new { htmlAttributes = new { @class = "form-control d-inline-flex text-center" } })
            </div>
        </div>
        <br />
        <div class="form-group text-center fw-bolder">
            @Html.LabelFor(model => model.tipoPlano, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-6 offset-md-3 pt-2">
                @Html.ValidationMessageFor(model => model.tipoPlano, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4 offset-md-4 pt-2">
                @Html.EditorFor(model => model.tipoPlano, new { htmlAttributes = new { @class = "form-control d-inline-flex text-center" } })
            </div>
        </div>
        <br />
        <div class="form-group text-center fw-bolder">
            @Html.LabelFor(model => model.corPlano, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-6 offset-md-3 pt-2">
                @Html.ValidationMessageFor(model => model.corPlano, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4 offset-md-4 pt-2">
                @Html.EditorFor(model => model.corPlano, new { htmlAttributes = new { @class = "form-control d-inline-flex text-center" } })
            </div>
        </div>
        <br />
        <div class="form-group text-center fw-bolder">
            <div>
                <label class="control-label col-md-12" for="file">Imagem do Plano</label>
            </div>
            <div class="col-md-4 offset-md-4 pt-2">
                <input class="form-control d-inline-block text-center" type="file" name="file" id="file" /><br />
            </div>
        </div>
        <br />
        <div class="form-group text-center fw-bolder">
            @Html.LabelFor(model => model.descPlano, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-6 offset-md-3 pt-2">
                @Html.ValidationMessageFor(model => model.descPlano, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4 offset-md-4 pt-2">
                @Html.EditorFor(model => model.descPlano, new { htmlAttributes = new { @class = "form-control d-inline-flex text-center" } })
            </div>
        </div>
        <br />
        <div class="form-group text-center fw-bolder">
            <div class="col-md-12">
                <input type="submit" value="Alterar" class="btn btn-warning rounded-pill" />
            </div>
        </div>
        <br />
    </div>
}

<div class="text-center">
    @Html.ActionLink("Voltar", "ListarPlano", "Plano")
</div>
