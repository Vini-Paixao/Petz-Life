@model Tcc.Models.modelCuidado

@{
    ViewBag.Title = "Cadastro de Cuidado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center titulos py-5">Cadastro de Cuidado do Pet</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-8 offset-2 was-validated fundo p-5 mt-5">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idAnimal)
        <div class="form-group text-center fw-bolder">
            <label class="control-label col-md-12" for="descCuidado">Adicione o Cuidado:</label>
            <div class="col-md-4 offset-md-4 pt-2">
                <input class="form-control d-inline-flex text-center" required type="text" maxlength="50" name="descCuidado" id="descCuidado" value="" />
            </div>
        </div>
        <br />
        <br />
        <div class="form-group col-12 d-inline-flex text-center">
            <div class="text-center col-md-4 offset-md-2">
                <a href="@Url.Action("Index", "Animal", new { @area = "", id = Session["idLogado"] } )" class="btn btn-custom botao-cancel text-center rounded-pill fw-bolder">
                    <i class="fa-solid fa-xmark"></i> Cancelar/Voltar
                </a>
            </div>
            <div class="text-center fw-bolder col-md-4">
                <button type="submit" class="btn btn-custom rounded-pill fw-bolder botão1"><i class="fa-solid fa-plus"></i> Cadastrar Cuidado</button>
            </div>
        </div>
    </div>
}

