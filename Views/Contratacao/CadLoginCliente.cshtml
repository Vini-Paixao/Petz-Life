@model Tcc.Models.modelLogin

@{
    ViewBag.Title = "Contratação - ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        .input-icons {
            display: flex;
            justify-content: center;
            align-items: baseline;
        }

            .input-icons #confSenha,
            .input-icons #senha {
                padding-right: 35px;
            }

            .input-icons i {
                margin-left: 10px;
                margin-right: -30px;
                margin-top: 10px;
                cursor: pointer;
            }

        #mostra-senha {
            margin-left: -30px;
            margin-right: 10px;
        }

        input, select, textarea {
            max-width: none;
        }

        .fundo {
            background-color: rgba(131, 192, 255, 0.25);
            border-radius: 30px;
            width: 90vw;
        }

        .btn-cancelar {
            background-color: red;
            border: 4px solid red;
            color: #fff;
            transition: 0.3s;
        }

            .btn-cancelar:hover {
                text-decoration: none;
                border: 4px solid red;
                background-color: #ffffff;
                color: red;
                transform: scale(1.05);
            }

        .tituloss {
            text-transform: uppercase;
            font-weight: bold;
            color: #A56BFF;
            font-size: 30px
        }

        .fa-circle {
            color: #A56BFF;
        }
    </style>
</head>

<body>
    <h2 class="text-center titulos py-4">Contratação - Cadastro do Login</h2>
    <div class="row text-center col-1 offset-4" style="display: inline-flex;align-items: center;justify-content: space-between;flex-wrap: nowrap;"><i class="fa-regular fa-circle fa-beat"></i><i class="fa-solid fa-circle"></i><i class="fa-solid fa-circle"></i><i class="fa-solid fa-circle"></i></div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal was-validated row mt-5 py-5 fundo">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row py-4">
                <div class="form-group text-center fw-bolder offset-md-3 col-md-3">
                    <label class="control-label" for="usuario">@Html.LabelFor(model => model.usuario)</label>
                    <div class="pt-2">
                        <input class="form-control d-inline-flex text-center" required type="text" maxlength="50" name="usuario" id="usuario" value="" />
                    </div>
                </div>
                <br />
                <div class="form-group text-center fw-bolder pl-5 col-md-3">
                    <label class="control-label" for="email">@Html.LabelFor(model => model.email)</label>
                    <div class="pt-2">
                        <input class="form-control d-inline-flex text-center" required type="email" maxlength="50" name="email" id="email" value="" />
                    </div>
                </div>
                <br />
            </div>
            <div class="row py-4">
                <div class="form-group text-center fw-bolder offset-md-3 col-md-3">
                    <label class="control-label" for="senha">@Html.LabelFor(model => model.senha)</label>
                    <div class="pt-2 input-icons">
                        <i class="fa fa-eye" id="mostra-senha"></i>
                        <input class="form-control d-inline-flex text-center" required type="password" maxlength="50" name="senha" id="senha" value="" />
                    </div>
                </div>
                <div class="form-group text-center fw-bolder pl-5 col-md-3">
                    <label class="control-label" for="confSenha">@Html.LabelFor(model => model.confSenha)</label>
                    <div class="pt-2 input-icons">
                        <input class="form-control d-inline-flex text-center" required type="password" maxlength="50" name="confSenha" id="confSenha" value="" />
                        <i class="fa fa-eye" id="mostra-confSenha"></i>
                    </div>
                </div>
            </div>
            <br />
            <div class="col-12 d-inline-flex text-center mt-5">
                <div class="form-group text-center col-md-2 offset-md-4">
                    <a href="@Url.Action("DetalhesPlano", "Home", new { @area = "", id = ViewBag.idPlano } )" class="btn btn-custom btn-cancelar rounded-pill text-center fw-bolder">
                        <i class="fa-solid fa-xmark"></i> Cancelar
                    </a>
                </div>
                <br />
                <div class="form-group text-center col-md-2">
                    <button type="submit" class="btn btn-custom rounded-pill botão1 fw-bolder">Continuar <i class="fa-solid fa-angle-right"></i></button>
                </div>
            </div>

            <div class="row text-center align-content-center justify-content-center">
                <div class="col-6 mx-auto">
                    <img src="~/Imagens/email.png" alt="Imagem Ilustrativa" class="img-fluid" style="width: 50%;">
                </div>
                <div class="col-6 mx-auto">
                    <img src="~/Imagens/senha.png" alt="Imagem Ilustrativa" class="img-fluid" style="width: 50%;">
                </div>
            </div>
        </div>
    }
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#mostra-senha").click(function () {
                var input = $("#senha");
                if (input.attr("type") === "password") {
                    input.attr("type", "text");
                } else {
                    input.attr("type", "password");
                }
            });

            $("#mostra-confSenha").click(function () {
                var input = $("#confSenha");
                if (input.attr("type") === "password") {
                    input.attr("type", "text");
                } else {
                    input.attr("type", "password");
                }
            });
            $("form").on("submit", function (e) {
                var senha = $("#senha").val();
                var confSenha = $("#confSenha").val();

                if (senha !== confSenha) {
                    alert("As senhas não são iguais. Por favor, verifique e tente novamente.");
                    e.preventDefault();
                }
            });
        });
    </script>
</body>